<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Theme.Androidminimalist" parent="android:Theme.Material.Light.NoActionBar">
    <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
    <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
    <!-- Customize your theme here. -->
  </style>

  <style name="Theme.Androidminimalist.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="Theme.Androidminimalist.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

  <style name="Theme.Androidminimalist.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>